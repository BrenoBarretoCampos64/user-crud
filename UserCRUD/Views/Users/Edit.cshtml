@model UserCRUD.Models.Utility.UpdateUserViewModel

@{
}

<div class="mt-4 px-5 d-flex justify-content-center">
    <div class="bg-white shadow-lg rounded w-50 p-4">
        <div class="text-center">
            <h2 class="mb-3 display-6">Editing User</h2>
            <hr />
        </div>
        <form method="post" action="Edit">
            <div class="mb-3">
                <label for=""><strong>Id</strong></label>
                <input type="text" class="form-control border-dark" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label for="Username"><strong>Username</strong></label>
                <input type="text" class="form-control border-dark" asp-for="Username" />
            </div>

            <div class="mb-3">
                <label for="Email"><strong>Email</strong></label>
                <input type="email" class="form-control border-dark" asp-for="Email" />
            </div>

            <div class="mb-3">
                <label><strong>Select Role</strong></label>
                <select class="form-select border-dark" aria-label="Default select example" asp-for="Role">
                    <option value="Viewer">Viewer</option>
                    <option value="Moderator">Moderator</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="BirthDate"><strong>Birth Date</strong></label>
                <input type="date" class="form-control border-dark" asp-for="BirthDate" />
            </div>
            <div class="d-flex justify-content-evenly">
                <button type="submit" class="btn btn-primary">Apply</button>
                <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Users">Delete</button>
            </div>
        </form>
    </div>
</div>